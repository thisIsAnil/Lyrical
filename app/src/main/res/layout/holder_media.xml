<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dip"
    android:layout_marginEnd="15dip"
    android:layout_marginTop="15dip"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/media_layout_frame"
            style="@style/Widget.CardContent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/media_icon"
                app:srcCompat="@drawable/ic_music"
                android:background="@drawable/gradient_music"
                android:layout_width="@dimen/media_thumb_width"
                android:layout_height="@dimen/media_thub_height"
                android:scaleType="centerCrop"

                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/media_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_medium"
                    tools:text="12-12-12-12.mp4"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:maxLines="2"
                    android:fontFamily="sans-serif-smallcaps"
                    />
                <TextView
                    android:id="@+id/media_details"
                    android:gravity="bottom"
                    android:textColor="@color/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margiin_16"
                    android:layout_marginLeft="@dimen/margiin_16"
                    android:layout_marginTop="@dimen/margiin_16"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_small"
                    tools:text="Artist"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>
