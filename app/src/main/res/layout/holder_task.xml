<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/task_category_icon"
        android:layout_width="@dimen/task_thumnail_height"
        android:layout_height="@dimen/task_thumnail_height"
        app:srcCompat="@drawable/ic_music"
        android:background="@drawable/gradient_music"
        android:layout_margin="@dimen/margiin_16"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margiin_16"
        android:layout_marginLeft="@dimen/margiin_16"
        android:layout_marginTop="@dimen/margiin_16"
        >

    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        tools:text="Task title"
        android:maxLines="1"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/margin_8"
        />
    <TextView
        android:id="@+id/task_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:typeface="serif"
        tools:text="Queued"
        android:paddingTop="@dimen/margin_8"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/margiin_16"
        />
    </LinearLayout>
</LinearLayout>